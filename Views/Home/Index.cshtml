@{
    ViewData["Title"] = "Weather Check";
}

<form id="weather-form">
    <div class="radio-inputs float-end mb-3">
        <label class="radio">
            <input type="radio" name="radio" value="json" checked="">
            <span class="name">JSON</span>
        </label>
        <label class="radio">
            <input type="radio" name="radio" value="xml">
            <span class="name">XML</span>
        </label>
    </div>
    <div class="group">
        <svg viewBox="0 0 24 24" aria-hidden="true" class="icon">
            <g>
                <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
            </g>
        </svg>
        <input class="input" type="search" placeholder="Search" />
    </div>
</form>

<h2 class="mt-5">Weather Result</h2>
<div class="card">
    <div class="card-body">
        <h5 id="title" class="card-title"></h5>
        <h6 id="sub-title" class="card-subtitle mb-2 text-body-secondary"></h6>
        <p  id="description" class="card-text"></p>
    </div>
</div>

<div class="code-snippet">
    <button class="copy-button">Copy</button>
    <pre id="code-snippet"><code class="snippet">
    </code></pre>
</div>


@section Scripts {
    <script type="text/javascript" src="/js/weatherscript.js" on-content-loaded></script>
}

